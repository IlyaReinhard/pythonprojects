def reverse_params(func):

  def wrapper(*args):
    new_args = args[::-1]
    return func(*new_args)

  return wrapper  
  
  @reverse_params
def f(a,b,c):
  multiply = (a*b) / c
  return multiply
  
  class OlegException(Exception):
  def __init__(self, name = 'OlegErorr'):
    self.name = name
  def __str__(self):
    return self.name


def without_Oleg_decorator(func):
  def wrapper(*args):
    new_list_args = [str(i) for i in args]
    line = ''.join(new_list_args).lower()
    try:
      if 'oleg' in line:
        raise OlegException
    except:
      print('Oleg Exception!!!')
      print('Уберите Олега из аргументов!')
      return func(*args)
  return wrapper

@without_Oleg_decorator
def fffff(*args):
  return f" {args} !!! "
  
  
  
  
  args = ('irA','olEg','Grom')
new_list_args = [str(i) for i in args]
line = ','.join(new_list_args).lower()
new_listing = line.split(',')
for i in new_listing:
  if i == 'oleg':
    new_listing.remove('oleg')
new_capitalize = []
for j in new_listing:
  new_capitalize.append(j.capitalize())
new_str = ', '.join(new_capitalize)
new_str

def fffff(*args):
  return f" {', '.join(args)}!!! "
